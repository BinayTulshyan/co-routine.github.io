{
  "name": "mat",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm-run-all -p watch:*",
    "build:pug": "pug source/pug/ --hierarchy -o public -P",
    "build:sass": "node-sass --importer node_modules/node-sass-glob-importer/dist/cli.js ./source/sass/application.scss ./public/dist/stylesheet/application.css --output-style compressed",
    "build:js": "rollup -c -m",
    "build": "npm-run-all build:*",
    "watch": "npm-run-all watch:*",
    "serve": "http-server -o",
    "watch:pug": "watch 'npm run build:pug' source/pug/",
    "watch:sass": "watch 'npm run build:sass' source/sass/",
    "watch:js": "watch 'npm run build:js' source/javascript/",
    "eslint": "./node_modules/.bin/eslint source/javascript/**/*.js"
  },
  "author": "Daisuke KONISHI",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^4.16.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "http-server": "^0.11.1",
    "node-sass": "^4.9.3",
    "node-sass-glob-importer": "^5.2.0",
    "npm-run-all": "^4.1.2",
    "pug": "^2.0.0-rc.4",
    "pug-cli": "git+https://github.com/pugjs/pug-cli.git",
    "rollup": "^0.55.1",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-uglify": "^3.0.0",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "sanitize.css": "^7.0.0"
  }
}
